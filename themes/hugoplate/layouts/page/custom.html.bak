<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .Title }}</title>
    <link rel="stylesheet" href="/css/tailwind.css"> <!-- Link your Tailwind CSS file -->
</head>
<body class="bg-gray-100 text-gray-900">

    <!-- Navigation -->
    <nav class="bg-gray-200 p-4">
        <ul class="flex space-x-4">
            <li><a href="/" class="text-blue-500 hover:underline">Home</a></li>
            <li><a href="/about/" class="text-blue-500 hover:underline">About</a></li>
            <li><a href="/blog/" class="text-blue-500 hover:underline">Blog</a></li>
            <li><a href="/custom-page/" class="text-blue-500 hover:underline">Custom Page</a></li>
        </ul>
    </nav>

    <!-- Header -->
    <header class="bg-blue-500 text-white p-4">
        <h1 class="text-2xl">{{ .Title }}</h1>
    </header>

    <!-- Main Content -->
    <main class="p-4">
        <article class="prose max-w-none">
            {{ .Content }}
        </article>

        <!-- Input Form -->
        <div class="flex justify-center items-center h-screen">
            <form class="flex space-x-4">
                <!-- First Name Box -->
                <div>
                    <label for="first-name" class="block text-sm font-medium text-gray-700">First Name</label>
                    <input
                        type="text"
                        id="first-name"
                        name="first-name"
                        class="block w-[450px] h-[32px] px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    />
                </div>

                <!-- Last Name Box -->
                <div>
                    <label for="last-name" class="block text-sm font-medium text-gray-700">Last Name</label>
                    <input
                        type="text"
                        id="last-name"
                        name="last-name"
                        class="block w-[450px] h-[32px] px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    />
                </div>
            </form>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white text-center p-2">
        <p>Custom Page Footer</p>
    </footer>

</body>
</html>

